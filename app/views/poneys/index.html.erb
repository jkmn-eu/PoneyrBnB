<div >
  <h1 class="poney-title">✨Welcome to PoneyrBnb !✨</h1>
</div>

<div >
 <h3 class=poney-list>Here are all our best ponies 🐴</h3>
</div>

<div class="d-flex justify-content-center">
  <button type="button" class="btn btn-primary btn-lg"><%= link_to "Add a poney", new_poney_path %></button>
</div>


<div class="poney-cards">
  <% @poneys.each do |p| %>
    <%= link_to poney_path(p) do %>
      <div class="poney-card text-decoration-none" style=>
        <div>
          <div class="poney-description-title">📇 <strong> Petit nom:</strong> <%= p.name%></div>
          <div class="poney-description-title">📝 <strong> Description:</strong><%= p.description %></div>
          <div class="poney-description-title">🌟 <strong> SuperPower:</strong><%= p.special_power %></div>
          <div class="poney-description-title">💰 <strong>Combien pour cette bôté? (EUR/Jour)</strong>  <%= p.price_per_diem %></div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
